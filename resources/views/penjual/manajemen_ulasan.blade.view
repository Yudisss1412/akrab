          </div>
          
          <div class="stat-card">
            <p class="stat-title">Rincian Ulasan</p>
            <div class="star-breakdown">
              @foreach($ratingStats as $rating => $count)
              <div class="star-row">
                <span class="star-label">
                  <span class="star">⭐</span> {{ $rating }}
                </span>
                <div class="star-progress">
